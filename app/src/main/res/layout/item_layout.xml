<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        android:foreground="?android:attr/selectableItemBackground">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/card_wrapper"
            >
            <!-- icon -->
            <ImageView
                android:id="@+id/item_icon"
                android:layout_width="@dimen/profile_pic_size"
                android:layout_height="@dimen/profile_pic_size"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/text_img_in_card_margin"
                android:layout_marginRight="@dimen/text_img_in_card_margin"
                android:layout_marginTop="@dimen/text_img_in_card_margin"
                android:layout_marginBottom="1dp"
                android:contentDescription="icon"
                android:visibility="invisible"
                android:src="@drawable/ic_launcher"
                />
            <ProgressBar
                android:id="@+id/progressBarProfilePic"
                style="?android:attr/progressBarStyle"
                android:layout_width="@dimen/profile_pic_size"
                android:layout_height="@dimen/profile_pic_size"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/text_img_in_card_margin"
                android:layout_marginRight="@dimen/text_img_in_card_margin"
                android:layout_marginTop="@dimen/text_img_in_card_margin"
                android:layout_marginBottom="1dp"
                android:visibility="visible" >
            </ProgressBar>

            <!-- title -->
            <TextView
                android:id="@+id/item_title"
                android:text="Headline"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/item_icon"
                android:layout_toRightOf="@id/item_icon"
                android:textColor="@android:color/darker_gray"
                android:layout_marginEnd="@dimen/user_title_margin"
                android:layout_marginRight="@dimen/user_title_margin"
                android:layout_marginTop="@dimen/text_img_in_card_margin"
                android:textSize="@dimen/name_text_size"
                android:ellipsize="end"/>
            <!-- Time -->
            <TextView
                android:id="@+id/item_time"
                android:text="time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/item_icon"
                android:layout_toRightOf="@id/item_icon"
                android:layout_below="@id/item_title"
                android:layout_marginEnd="@dimen/inline_textview_separation"
                android:layout_marginRight="@dimen/inline_textview_separation"
                android:layout_marginBottom="@dimen/text_img_in_card_margin"
                android:textSize="@dimen/time_text_size"
                android:maxLines="1"
                android:ellipsize="end"/>
            <!-- Source -->
            <TextView
                android:id="@+id/item_source"
                android:text="source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/item_time"
                android:layout_toRightOf="@id/item_time"
                android:layout_below="@id/item_title"
                android:layout_marginEnd="@dimen/inline_textview_separation"
                android:layout_marginRight="@dimen/inline_textview_separation"
                android:layout_marginBottom="@dimen/text_img_in_card_margin"
                android:textSize="@dimen/time_text_size"
                android:maxLines="1"
                android:ellipsize="end"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>