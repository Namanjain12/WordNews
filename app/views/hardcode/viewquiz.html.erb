<h1>Hardcoded quiz view</h1>

<a href="/hardcode/newquiz">Add a new quiz</a>
<table>
      <thead>
        <tr>
          <th>url</th>
          <th>from</th>
          <th>option1</th>
          <th>option2</th>
          <th>option3</th>
        </tr>
      </thead>

      <% @hardcoded_quizzes.each do |quiz| %>
            <tr>
          <td><%= quiz.url %></td>
          <td><%= quiz.word %></td>
          <td><%= quiz.option1%></td>
          <td><%= quiz.option2%></td>
          <td><%= quiz.option3%></td>
          <td><a href="/hardcode/deletequiz?id=<%= quiz.id%>">Delete</a></td>
        </tr>
    <% end %>
</table>

